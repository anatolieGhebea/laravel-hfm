{
    "name": "anatolieghebea/laravel-hfm",
    "description": "A  laravel packe aimed to reduce verbose and repetiteve code in the application by generatinc it at runtime starting from a simple Array declaration in the Models.",
    "keywords": [
        "anatolieghebea",
        "laravel-hfm"
    ],
    "homepage": "https://github.com/anatolieghebea/laravel-hfm",
    "license": "MIT",
    "authors": [
        {
            "name": "Anatolie Ghebea",
            "email": "gt.anatoli@yahoo.it",
            "homepage": "https://github.com/anatolieghebea/laravel-hfm",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/contracts": "^7.2"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "AnatolieGhebea\\LaravelHfm\\": "src"
        },
        "files":[
            "src/Helpers/HfmConst.php",
            "src/Helpers/HfmHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AnatolieGhebea\\LaravelHfm\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "AnatolieGhebea\\LaravelHfm\\LaravelHfmServiceProvider"
            ],
            "aliases": {
                "LaravelHfm": "AnatolieGhebea\\LaravelHfm\\LaravelHfmFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [

    ]
}
